<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--Account payment form-->
        <record model="ir.ui.view" id="view_account_voucher_payment_form_inherit_1">
            <field name="name">account.voucher.payment.form.inherit1</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_vendor_payment_form" />
            <field name="arch" type="xml">
                <data>
                    <field name="partner_id" position="replace">
                        <field name="voucher_mode" required="1" />
                        <field name="partner_id" attrs="{'invisible': [('voucher_mode', '!=', 'single')], 'required': [('voucher_mode', '=', 'single')], 'readonly': [('state', '!=', 'draft')]}" invisible="context.get('line_type', False)" on_change="onchange_partner_id(partner_id, journal_id, amount, currency_id, type, date, context)" context="{'invoice_currency':currency_id, 'default_customer': 0, 'search_default_supplier': 1, 'default_supplier': 1}" string="Supplier"/>
                    </field>
                    <notebook position="before">
                        <separator string="Suppliers" attrs="{'invisible': [('voucher_mode', '!=', 'multiple')]}"/>
                        <field name="partner_ids" attrs="{'invisible': [('voucher_mode', '!=', 'multiple')]}"
                               on_change="onchange_partner_ids(partner_ids, journal_id, amount, currency_id, type, date, context)" context="{'invoice_currency':currency_id, 'default_customer': 0, 'search_default_supplier': 1, 'default_supplier': 1}"/>
                    </notebook>
                    <field name="line_dr_ids" position="replace" attrs="{'readonly': [('state', '!=', 'draft')]}">
                        <field name="line_dr_ids" context="{'journal_id':journal_id, 'type':type, 'partner_id':partner_id}" on_change="onchange_line_ids(line_dr_ids, line_cr_ids, amount, currency_id, type, context)">
                                <tree string="Supplier Invoices and Outstanding transactions" editable="bottom" colors="gray:amount==0">
                                    <field name="partner_id" />
                                    <field name="move_line_id" context="{'journal_id':parent.journal_id, 'partner_id':parent.partner_id}" on_change="onchange_move_line_id(move_line_id)" domain="[('account_id.type','=','payable'), ('reconcile_id','=', False), ('partner_id','=',parent.partner_id)]" required="1"/>
                                    <field name="account_id" groups="base.group_no_one" domain="[('type','=','payable')]"/>
                                    <field name="date_original" readonly="1"/>
                                    <field name="date_due" readonly="1"/>
                                    <field name="amount_original" readonly="1"/>
                                    <field name="amount_unreconciled" readonly="1" groups="account.group_account_user"/>
                                    <field name="reconcile" on_change="onchange_reconcile(reconcile, amount, amount_unreconciled, context)" groups="account.group_account_user"/>
                                    <field name="amount" sum="Total Allocation" on_change="onchange_amount(amount, amount_unreconciled, context)"/>
                                </tree>
                            </field>
                    </field>
                </data>
            </field>
        </record>
    </data>
</openerp>